# ==============================================================================
# Application Configuration
# ==============================================================================

# Application Settings
APP_NAME=my-awesome-app
APP_VERSION=1.0.0
APP_ENV=development
# APP_ENV options: development, local, staging, production
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_TIMEOUT=30s

# ==============================================================================
# HTTP Server Configuration
# ==============================================================================

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=120s
HTTP_SHUTDOWN_TIMEOUT=15s

# CORS Settings
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://example.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
# CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Request-ID
CORS_EXPOSED_HEADERS=
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# TLS/SSL Settings
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# ==============================================================================
# gRPC Server Configuration
# ==============================================================================

GRPC_HOST=0.0.0.0
GRPC_PORT=9090
GRPC_MAX_CONNECTION_IDLE=5m
GRPC_MAX_CONNECTION_AGE=30m
GRPC_MAX_CONNECTION_AGE_GRACE=5m
GRPC_KEEPALIVE_TIME=2h
GRPC_KEEPALIVE_TIMEOUT=20s

# ==============================================================================
# Database Configuration
# ==============================================================================

# Database Connection
DB_DRIVER=postgres
# DB_DRIVER options: postgres, mysql, sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password
DB_DATABASE=myapp_development
DB_SSL_MODE=disable
# DB_SSL_MODE options for postgres: disable, require, verify-ca, verify-full

# Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Migration Settings
DB_MIGRATION_PATH=migrations

# ==============================================================================
# Redis Configuration
# ==============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_TLS=false

# ==============================================================================
# Message Queue Configuration
# ==============================================================================

QUEUE_DRIVER=redis
# QUEUE_DRIVER options: rabbitmq, kafka, sqs, redis
QUEUE_URL=
# Examples:
# RabbitMQ: amqp://user:pass@localhost:5672/
# Kafka: localhost:9092
# SQS: https://sqs.us-east-1.amazonaws.com
QUEUE_MAX_RETRIES=3
QUEUE_CONCURRENCY=10
QUEUE_PREFETCH=10

# ==============================================================================
# Object Storage Configuration
# ==============================================================================

STORAGE_DRIVER=local
# STORAGE_DRIVER options: s3, minio, gcs, local
STORAGE_ENDPOINT=
# For MinIO: http://localhost:9000
# For custom S3: https://s3.custom.com
STORAGE_REGION=us-east-1
STORAGE_BUCKET=my-app-uploads
STORAGE_ACCESS_KEY_ID=your-access-key
STORAGE_SECRET_ACCESS_KEY=your-secret-key
STORAGE_USE_SSL=true
STORAGE_BASE_PATH=uploads

# ==============================================================================
# Logger Configuration
# ==============================================================================

LOG_LEVEL=debug
# LOG_LEVEL options: debug, info, warn, error, fatal, panic
LOG_FORMAT=console
# LOG_FORMAT options: json, console
LOG_OUTPUT_PATHS=stdout
# LOG_OUTPUT_PATHS=stdout,/var/log/app.log
LOG_ERROR_OUTPUT_PATHS=stderr
LOG_ENABLE_CALLER=true
LOG_ENABLE_STACKTRACE=true

# ==============================================================================
# Authentication Configuration
# ==============================================================================

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=go-infra
JWT_AUDIENCE=go-infra-api
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h
# JWT_REFRESH_EXPIRY=168h = 7 days
JWT_ALGORITHM=HS256
# JWT_ALGORITHM options: HS256, RS256

# For RS256 algorithm, provide key paths
JWT_PRIVATE_KEY_PATH=/path/to/private.key
JWT_PUBLIC_KEY_PATH=/path/to/public.key

# ==============================================================================
# OAuth Configuration
# ==============================================================================

# Google OAuth
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback
OAUTH_GOOGLE_SCOPES=email,profile

# GitHub OAuth
OAUTH_GITHUB_ENABLED=false
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_GITHUB_REDIRECT_URL=http://localhost:8080/auth/github/callback
OAUTH_GITHUB_SCOPES=user:email

# Facebook OAuth
OAUTH_FACEBOOK_ENABLED=false
OAUTH_FACEBOOK_CLIENT_ID=your-facebook-app-id
OAUTH_FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
OAUTH_FACEBOOK_REDIRECT_URL=http://localhost:8080/auth/facebook/callback
OAUTH_FACEBOOK_SCOPES=email

# ==============================================================================
# Session Configuration
# ==============================================================================

SESSION_COOKIE_NAME=session
SESSION_SECRET=your-super-secret-session-key-change-this
SESSION_MAX_AGE=24h
SESSION_SECURE=false
# Set SESSION_SECURE=true in production with HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
# SESSION_SAME_SITE options: strict, lax, none

# ==============================================================================
# Password Policy Configuration
# ==============================================================================

PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPER=true
PASSWORD_REQUIRE_LOWER=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_BCRYPT_COST=12
# PASSWORD_BCRYPT_COST: 4-31, higher = more secure but slower (10-14 recommended)

# ==============================================================================
# Production Example
# ==============================================================================

# For production, use these settings:
# APP_ENV=production
# APP_DEBUG=false
# LOG_LEVEL=info
# LOG_FORMAT=json
# DB_SSL_MODE=require
# SESSION_SECURE=true
# TLS_ENABLED=true
# CORS_ALLOWED_ORIGINS=https://yourdomain.com

# ==============================================================================
# Staging Example
# ==============================================================================

# For staging, use these settings:
# APP_ENV=staging
# APP_DEBUG=false
# LOG_LEVEL=info
# DB_SSL_MODE=require

